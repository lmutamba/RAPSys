@model RapModel.ViewModel.PAPViewModel
@{
    ViewBag.Title = "Pap Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PAP Details</h2>

<div class="row">
    <div class="col-md-12">
        <div class="card mb-xlg">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h4 class="card-title text-primary fw-semi-bold">Details</h4>
                    <a href="#" class="btn btn-primary btn-rounded-f" id="editPAPDetails"><i class="fas fa-edit"></i> Edit Details </a>
