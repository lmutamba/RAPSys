                    </li>
                    @*<li class="dropdown nav-item">
                        <a href="@Url.Action("MyApproval","Land")" class="no-caret nav-link">
                            <span class="square square-lg fa-stack">
                                <i class="fas fa-check fa-stack-2x"></i>
                                <i class="fas fa-times fa-stack" style="color:tomato"></i>
                            </span>
                        </a>
                    </li>*@
                    <li class="dropdown nav-item">
                        <a href="#" class="no-caret nav-link" data-toggle="dropdown">
