                        <i class="toggle fas fa-angle-down"></i>
                    </a>
                    <ul id="sidebar-comp" class="collapse ">
                    </ul>
                </li>*@
                <li class="">
                    <a href="@Url.Action("Index","Land")">
                        <span class="icon">
                            <i class="fas fa-globe-africa"></i>
                        </span>
                        Land Acquisition
                    </a>
                </li>
                <li class="">
                    <a href="@Url.Action("Index","Community")">
