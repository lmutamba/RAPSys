                                <i class="fas fa-times fa-stack" style="color:tomato"></i>
                            </span>
                        </a>
                    </li>*@
                </ul>
                <!-- xs & sm screen logo -->
                <a class="navbar-brand d-md-none" href="#">
                    <i class="fas fa-circle text-gray mr-n-sm"></i>
                    <i class="fas fa-circle text-warning"></i>
                    &nbsp;TFM RAPSys &nbsp;
                    <i class="fas fa-circle text-warning mr-n-sm"></i>
                    <i class="fas fa-circle text-gray"></i>
                </a>
            </div>

            <!-- this part is hidden for xs screens -->
            <div class="navbar-header mobile-hidden">
                <form class="navbar-form" role="search">
                    <div class="form-group">

                    </div>
                </form>
                <ul class="nav navbar-nav float-right">
                    <li class=" nav-item">
                        <span class="thumb-sm avatar float-left">
                            <img class="rounded-circle" src="@Url.Content("~/Images/"+ _userID +".jpg")" alt="...">
