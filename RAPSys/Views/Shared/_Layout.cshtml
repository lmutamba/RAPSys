<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge, chrome=1">
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" />
    <meta charset="utf-8" />
    <meta name="description" content="RAP Managment System" />

    <title>RAPSys - @ViewBag.Title</title>

    @Styles.Render("~/bundles/Content/cssFiles")
    @Scripts.Render("~/bundles/modernizr")
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-36759672-9');
    </script>
</head>
<body>
    @{
        Repository.HelpersRepository helpers = new Repository.HelpersRepository();
        RapModel.ViewModel.PersonViewModel Person = helpers.GetLogInPerson(User.Identity.Name);
        string _userID = Person.TFMID;
        string _userName = Person.FirstName + " " + Person.LastName;
    }
    @while (_userID.Length < 10)
    {
        _userID = "0" + _userID;
    }

    <nav id="sidebar" class="sidebar " role="navigation">
